extends layout

block content
  .container.main
    h1.text-center= title
    p.medium Todos los objetos perdidos se listan debajo
    ol #[strong Filtrar por:]
      li(style='display:inline-block') #[a(href="/filter/utiles") Utiles Escolares]
      li(style='display:inline-block') #[a(href="/filter/ropa") Ropa]
      li(style='display:inline-block') #[a(href="/filter/trastes") Trastes]
      li(style='display:inline-block') #[a(href="/filter/otros") Otros]
    table.table.table-stripped.table-responsive.text-left
      thead
        tr
          th Objeto
          th Folio
          th Tipo
          th Descripci√≥n
          th Fecha de captura
      each objeto in objetos
        tr
          td #[img.col-md-3.img-responsive.img-thumbnail(src='/uploads/#{objeto.imagen}')]
          td #{objeto.id}
          td #{objeto.type}
          td #{objeto.description}
          td #{objeto.fechaEntrada}
